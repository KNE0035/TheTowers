<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.marek.thetowers">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".GameMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameViewActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".BestScoreActivity" />
        <activity
            android:name=".GameActiveObjectsInfoActivity"
            android:label="@string/title_activity_game_active_objects_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".GameActiveObjectDetailActivity"></activity>
    </application>

</manifest>