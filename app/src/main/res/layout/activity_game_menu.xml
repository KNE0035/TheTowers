<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marek.thetowers.GameMenuActivity"
    android:background="@drawable/background"
    >

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/user_overlay"
        android:text="New game"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gameUnitsButton"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Game units"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/user_overlay"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/newGameButton"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:id="@+id/bestGameButton"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Best game info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/optionsButton"
        android:background="@drawable/user_overlay"/>

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Options"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/gameUnitsButton"
        android:background="@drawable/user_overlay"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:id="@+id/quitButton"
        android:layout_width="188dp"
        android:layout_height="57dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Quit game"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/user_overlay"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bestGameButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:textColor="@android:color/background_light"
        />

</android.support.constraint.ConstraintLayout>
